<h1>Products</h1>

<table class="table table-hover table-bordered">
	<tr>
		<th>Path</th>
		<th>Name</th>
		<th>Price</th>
		<th>Created</th>
		<th>Action</th>
	</tr>
	<% for product in @products %>
	<tr>
		<td><%= link_to product.id, admin_product_path(product) %></td>
		<td><%= product.name %></td>
		<td><%= number_to_currency product.price %></td>
		<td><%= time_ago_in_words product.created_at %> ago</td>
		<td>
			<%= link_to 'edit', edit_admin_product_path(product), class: 'btn btn-success' %>
			<%= link_to 'delete', admin_product_path(product), class: 'btn btn-danger', method: :delete, confirm: 'Are You Sure?' %>
		</td>
	</tr>
	<% end %>
	<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
</table>

<% if flash[:notice].present? %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>